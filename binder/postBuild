set -ex

wget -O julia.tar.gz https://julialang-s3.julialang.org/bin/linux/x64/1.3/julia-1.3.1-linux-x86_64.tar.gz
tar -xvzf julia.tar.gz

julia-1.3.1/bin/julia -e 'import Pkg; Pkg.add(Pkg.PackageSpec(;name="IJulia", version="1.20.2")); Pkg.build("IJulia")'

R -e 'julia_setup(JULIA_HOME = "/home/jovyan/julia-1.3.1/bin")'
